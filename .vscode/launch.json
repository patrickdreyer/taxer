    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Main",
            "type": "debugpy",
            "request": "launch",
            "program": "src/__main__.py",
            "console": "integratedTerminal",
            "args": [
                "--input", "~/Dropbox/4-Buchhaltung/2023/Kryptos/reports",
                "--cache", "~/Dropbox/4-Buchhaltung/2023/Kryptos/cache",
                "--output", "~/Dropbox/4-Buchhaltung/2023/Kryptos/",
                "--config", "~/Dropbox/4-Buchhaltung/2023/Kryptos/taxer.json",
                "--year", "2023",
                "--transactions", "~/Dropbox/4-Buchhaltung/2023/Kryptos/transactions"
            ]
        },
        {
            "name": "Test Explorer",
            "type": "debugpy",
            "request": "attach",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "purpose": ["debug-test"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}